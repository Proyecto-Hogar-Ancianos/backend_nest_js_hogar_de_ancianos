  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:black": "playwright test --project=auth-black-box",
    "test:report": "playwright show-report",
    "test:notifications": "npx playwright test --project=notifications-simple",
    "test:roles": "npx playwright test --project=roles-simple",
    "test:users": "npx playwright test --project=users-simple",
    "test:audit": "npx playwright test --project=audit-simple",
    "test:unit": "jest --testPathPatterns=unit",
    "test:selenium": "jest --testPathPatterns=selenium",
    "test:simple": "npx playwright test --project=notifications-simple --project=roles-simple --project=users-simple --project=audit-simple",
    "setup:users": "ts-node scripts/create-super-users.ts",
    "disable:2fa": "ts-node scripts/disable-2fa.ts",
    "disable:2fa:admin": "ts-node scripts/disable-2fa.ts admin@hogarancianos.com",
    "disable:2fa:superadmin": "ts-node scripts/disable-2fa.ts superadmin@hogarancianos.com"
